{
    "name": "gearchy-project",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "turbo run build --filter=!site",
        "pretty": "prettier --write \"./**/*.{js,ts}\"",
        "prepublishOnly": "pnpm -F './packages/**' build",
        "pkg:publish": "pnpm publish --filter './packages/**'",
        "release": "bumpp package.json app/package.json packages/*/package.json && pnpm pkg:publish",
        "preview": "vercel dev"
    },
    "devDependencies": {
        "bumpp": "^8.2.1",
        "prettier": "^2.7.1",
        "turbo": "^1.4.6",
        "vercel": "^28.2.5"
    },
    "dependencies": {
        "http-server": "^14.1.1"
    }
}